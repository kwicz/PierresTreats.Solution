@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--2-col"></div>
  <div class="mdl-cell mdl-cell--8-col">
    <div class="mdl-card">
      <div class="mdl-card__media">
        <h1>Add a New Menu Item</h1>
      </div>
      <div class="mdl-card__supporting-text">
        @using (Html.BeginForm())
        {
          <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.Name, new { @class="mdl-textfield__label" })
            @Html.TextBoxFor(model => model.Name, new { @class="mdl-textfield__input" })
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            @Html.Label("Select Flavor")
            @Html.DropDownList("FlavorId")
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            @Html.LabelFor(model => model.Cost, new { @class="mdl-textfield__label"})
            @Html.EditorFor(model => model.Cost, new { @class="mdl-textfield__label" })
          </div>
          <br>
          <div>
            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Add</button>
          </div> 
        }
      <div class="mdl-card__actions">
        <p>@Html.ActionLink("Show all treats", "Index")</p>
      </div>
    </div>

  </div>
  <div class="mdl-cell mdl-cell--2-col"></div>
</div>
